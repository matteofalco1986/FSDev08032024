
@{
    ViewBag.Title = "Checkout";
}

<h2 class="mt-3 text-center">ORA PAGHI</h2>

<h3>DETTAGLI SOGGIORNO</h3>
<table class="table mb-3">
    <thead>
        <tr>
            <th scope="col">Id Prenotazione</th>
            <th scope="col">Cliente</th>
            <th scope="col">Codice Fiscale</th>
            <th scope="col">Date soggiorno</th>
            <th scope="col">Durata soggiorno</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Model.PrenotazioneId</th>
            <td>@(Model.Cliente.Cognome) @(Model.Cliente.Nome)</td>
            <td>@Model.Cliente.CodiceFiscale</td>
            <td>@(Model.InizioSoggiorno.ToString("dd/MM/yyyy")) -  @(Model.FineSoggiorno.ToString("dd/MM/yyyy"))</td>
            <td>@(Model.NumeroNotti) Notti</td>

        </tr>

    </tbody>
</table>

<h3 class="mt-3">DETTAGLI SERVIZI AGGIUNTIVI</h3>

<table class="table mb-3">
    <thead>
        <tr>
            <th scope="col">Id Prenotazione</th>
            <th scope="col">Servizio richiesto</th>
            <th scope="col">Quantita</th>
            <th scope="col">Prezzo</th>
            <th scope="col">Data richiesta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var amenity in ViewBag.Amenities)
        {
            <tr>
                <th scope="row">@amenity.PrenotazioneId</th>
                <td>@amenity.ServizioAggiuntivo.TipoServizio</td>
                <td>@amenity.Quantita</td>
                <td>$ @(amenity.ServizioAggiuntivo.Prezzo.ToString("0.00"))</td>
                <td>$ @(amenity.Data.ToString("dd/MM/yyyy"))</td>
            </tr>
        }
    </tbody>
</table>

<h3 class="mt-3">DETTAGLI PAGAMENTO</h3>

<div class="d-flex justify-content-between align-items-center mb-3 mt-3" style="width: 400px; border: 1px solid black">

</div>

<p>NOME: @Model.Cliente.Nome</p>
<p>COGNOME: @Model.Cliente.Cognome</p>
<p>CODICE FISCALE: @Model.Cliente.CodiceFiscale</p>

<div class="d-flex justify-content-between align-items-center mb-3 mt-3" style="width: 400px; border: 1px solid black">

</div>

<div class="d-flex justify-content-between align-items-center" style="width: 400px;">
    <p>NOTTI PERNOTTAMENTO:</p>
    <p><strong>@(Model.NumeroNotti)</strong></p>
</div>
<div class="d-flex justify-content-between align-items-center" style="width: 400px;">
    <p>TARIFFA PER NOTTE:</p>
    <p><strong>@(Model.Tariffa.ToString("0.00")) $</strong></p>
</div>
<div class="d-flex justify-content-between align-items-center" style="width: 400px;">
    <p>TOTALE DOVUTO NOTTI:</p>
    <p><strong>@(ViewBag.TotaleNotti.ToString("0.00")) $</strong></p>
</div>
<div class="d-flex justify-content-between align-items-center" style="width: 400px;">
    <p>CAPARRA VERSATA: </p>
    <p><strong>-@(Model.Caparra.ToString("0.00")) $</strong></p>
</div>
<div class="d-flex justify-content-between align-items-center mb-3 mt-3" style="width: 400px; border: 1px solid black">

</div>
<div class="d-flex justify-content-between align-items-center" style="width: 400px;">
    <p>TOTALE PERNOTTAMENTO:</p>
    <p><strong>@(ViewBag.TotalePrenotazione.ToString("0.00")) $</strong></p>
</div>
<div class="d-flex justify-content-between align-items-center" style="width: 400px;">
    <p>TOTALE SERVIZI:</p>
    <p><strong>+@(ViewBag.TotaleAmenities.ToString("0.00")) $</strong></p>
</div>
<div class="d-flex justify-content-between align-items-center mb-3 mt-3" style="width: 400px; border: 2px solid black">

</div>
<div class="d-flex justify-content-between align-items-center" style="width: 400px;">
    <h5><strong>TOTALE DOVUTO: </strong></h5>
    <h5><strong> @(ViewBag.TotaleDovuto.ToString("0.00")) $</strong></h5>
</div>


